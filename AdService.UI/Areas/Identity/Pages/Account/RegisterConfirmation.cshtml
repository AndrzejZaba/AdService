@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    //Layout = null;
}

<div class="center-div-parent-container">
    <div class="center-div-container">
        <div class="card card-border-top">
            <h3 class="card-header bg-transparent mt-3 pb-3 text-center">@ViewBag.Title</h3>
            <div class="card-body">
        
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Well done!</h4>
                    <p>Thank you for registering! We have sent you an e-mail with an activation link. yourmailbox and confirm the e-mail.</p>
                    <hr>
                    <p class="mb-0">Get ready to explore and enjoy all the benefits our platform has to offer.</p>
                    <hr />
                    <p>Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">here to confirm your account</a></p>
                </div>

            </div>
        </div>
    </div>
</div>


