@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    //Layout = null;
}

<div class="center-div-parent-container">
    <div class="center-div-container">
        <div class="card card-border-top">
            <h3 class="card-header bg-transparent mt-3 pb-3 text-center">@ViewBag.Title</h3>
            <div class="card-body">
        
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Well done!</h4>
                    <p>Thank you for confirming your email.</p>
                    <hr>
                    <p class="mb-0">Return to <a asp-controller="Home" asp-action="Index">Home page</a></p>
                    
                </div>

            </div>
        </div>
    </div>
</div>

