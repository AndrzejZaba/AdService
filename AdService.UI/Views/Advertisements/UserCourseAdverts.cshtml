@using AdService.Application.Advertisements.CourseAdvertisements.Queries.GetUsersCourseAdverts;
@using AdService.Application.Common.Models;

@model PaginatedList<CourseAdvertBasicsDto>

@{
    ViewData["Title"] = "My Courses Advertisements";
}


<div>

    <partial name="_ProfileNav" />

    <div class="container">
        
        <div class="mt-5">  
            <a href="/Advertisements/AddCourseAdvertisement" class="btn btn-primary mb-3" role="button">
                Add Advertisement
            </a>
            @*<button class="btn-lg btn btn-primary text-white">Add Advertisement</button>*@
        </div>


        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model.Items)
            {
                <div class="col">
                    <partial name="_CourseAdvertisement" model="item" />
                </div>
            }
            
        </div>

        <ul class="pagination">  
            @for (int i = 1; i <= Model.TotalPages; i++)  
            {  
                <li class="@(i == Model.PageIndex ? "page-item active" : "page-item")">  
                    <a class="page-link" href="@Url.Action("UserCourseAdverts", new { page = i })">@i</a>  
                </li>  
            }   
    </ul>  

    </div>


</div>