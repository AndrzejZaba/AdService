@using AdService.Application.Advertisements.CourseAdvertisements.Queries.GetSearchCourseAdverts;


@model SearchCourseAdvertsVm


    <div class="container">
        
<h3 class="mt-4">Searched Adverts</h3>


        <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 g-4">
            @foreach (var item in Model.PaginatedAdverts.Items)
            {
                <div class="card-group">
                    
                    
                        <partial name="_CourseAdvertisement" model="item" />
                    
                </div>
            }
            
        </div>
        <div class="mt-3">
            <ul class="pagination">  
                @for (int i = 1; i <= Model.PaginatedAdverts.TotalPages; i++)  
                {  
                    <li class="@(i == Model.PaginatedAdverts.PageIndex ? "page-item active" : "page-item")">  
                        <a class="page-link" href="@Url.Action("SearchedCoursesList", 
                        new { 
                            searchedText = Model.SearchText,
                            categoryId = Model.CategoryId,
                            page = i })">@i</a>  
                    </li>  
                }   
            </ul>  
        </div>

    </div>